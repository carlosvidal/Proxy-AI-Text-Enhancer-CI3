# Archivo .env para CodeIgniter 3
# Copiar a la raíz de tu proyecto CI3 y renombrar a .env

# API Keys para diferentes proveedores
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key
COHERE_API_KEY=your-cohere-api-key
GOOGLE_API_KEY=your-google-api-key
MISTRAL_API_KEY=your-mistral-api-key

# Configuración CORS
# Lista de dominios permitidos separados por comas
# Usar '*' para permitir todos los orígenes
ALLOWED_ORIGINS=http://localhost:8080,https://your-production-domain.com

# Configuración de cuotas y límites
DEFAULT_QUOTA=100
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Base de datos
CI_DB_HOSTNAME=localhost
CI_DB_USERNAME=db_user
CI_DB_PASSWORD=db_password
CI_DB_DATABASE=llm_proxy_db

# Entorno de CodeIgniter
CI_ENV=development